extends ../base/site-layout

block append head
    script(src='/static/monkey/js/event-history.js')

block content
    h3 Event History
    hr

    #errMsg
        if errMsg
            pre= errMsg

    div#filter.row
        div.col-sm-3
            label(for="product", style="text-align: left; min-width: 60px; padding: 0")= '产品'
            select#product.select2(style="min-width: 150px")
                option='-- 所有产品 --'
                each product, i in product_list
                    option=product
        div.col-sm-1
        div.col-sm-3
            label(for="version", style="text-align: left; min-width: 60px; padding: 0")= '版本'
            select#version.select2(style="min-width: 150px")
                option='-- 所有版本 --'
                each version, i in version_list
                    option=version

        div.col-sm-1
        div.col-sm-3
            label(for="device", style="text-align: left; min-width: 60px; padding: 0")= '设备'
            select#device.select2(style="min-width: 150px;")
                option='-- 所有设备 --'
                each device, i in device_list
                    option=device


    div
        hr(style="margin: 10px 0 10px 0")

    div#div-table
        table#event-history-table

